<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="crescer" transaction-type="JTA">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <jta-data-source>jdbc/crescer</jta-data-source>
        <class>br.com.cwi.crescer.entity.Ator</class>
        <class>br.com.cwi.crescer.entity.Classificacao</class>
        <class>br.com.cwi.crescer.entity.Elenco</class>
        <class>br.com.cwi.crescer.entity.Filme</class>
        <class>br.com.cwi.crescer.entity.Genero</class>
        <class>br.com.cwi.crescer.entity.Idioma</class>
        <class>br.com.cwi.crescer.entity.Login</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <!--<property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>-->
        </properties>
    </persistence-unit>
</persistence>
